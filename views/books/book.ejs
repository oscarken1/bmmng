<% layout('./layout/boilerplate') %> 
    <h1 class="text-center">BOOKS</h1>
    <% for (let book of books) { %>
        <div class="col-9 offset-1">
            <div class="card" mb-3> 
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="" alt="">
                    </div>
                    <div class="col-mg-8">
                        <div class="card-body">
                            <h5 class="card-title">Title: <%= book.title %></h5>
                            <h5 class="card-text">Author(s): <%= book.author %></h5>
                            <p class="card-text">About Author: <%= book.about_author %></p>
                            <p class="card-text">Summary: <%= book.summary %></p>
                            <small class="text-muted">Genre: <%= book.genre %> </small>
                            <p><a class="btn btn-primary" href="/book/<%= book._id %>">View <%= book.title %></a></p>
                        </div>
                    </div>
                </div>
            </div>
            </div>
            <% } %>
            <div>
                <p><a class="btn btn-success" href="/book/new">Add a new book</a></p>
            </div>

