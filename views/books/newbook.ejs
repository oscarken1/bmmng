<% layout('./layout/boilerplate') %>
<div class="row">
    <h1 class="text-center">Add New Book</h1>
    <div class="col-7 offset-3">
        <form action="/book" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="book[title]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="author">Author(s)</label>
                <input class="form-control" type="text" id="author" name="book[author]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="about_author">About Author</label>
                <textarea class="form-control" type="text" id="about_author" name="book[about_author]"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" for="year">book Year</label>
                <input class="form-control" type="text" id="year" name="book[year]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="genre">Genre</label>
                <input class="form-control" type="text" id="genre" name="book[genre]">
            </div>
            <div class="mb-3">
                <label class="form-label" for="summary">Summary</label>
                <textarea class="form-control" type="text" id="summary" name="book[summary]"></textarea>
            </div>
            <div class="mb-3">
                <label class="form-label" for="download_url">Download URL</label>
                <input class="form-control" type="text" id="download_url" name="book[download_url]">
            </div>
            <button class="btn btn-success">Add book</button>
        </form>
    </div>
</div>
   
    <p><a class="btn btn-success" href="/book">Back to All books</a></p>
