<% layout('./layout/boilerplate') %>
    <h1 class="text-center">EDIT THIS GAME</h1>
    <div class="col-7 offset-3"></div>
    <form action="/game/<%= game._id %>?_method=PUT" method="POST">
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="game[title]" value="<%= game.title %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="owner">Owner(s)</label>
            <input class="form-control" type="text" id="owner" name="game[owner]" value="<%= game.owner %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="year">Game Year</label>
            <input class="form-control" type="text" id="year" name="game[year]" value="<%= game.year %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">description</label>
            <input class="form-control" type="text" id="description" name="game[description]"
                value="<%= game.description %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="genre">Genre</label>
            <input class="form-control" type="text" id="genre" name="game[genre]" value="<%= game.genre %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="release_date">Release Date</label>
            <input class="form-control" type="text" id="release_date" name="game[release_date]"
                value="<%= game.release_date %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="language">Language</label>
            <input class="form-control" type="text" id="language" name="game[language]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="download_url">Download URL</label>
            <input class="form-control" type="text" id="download_url" name="game[download_url]"
                value="<%= game.download_url %> ">
        </div>
        <div class="mb-3"></div>
        <button class="btn btn-success" mb-3>Update game</button>
    </form>
    </div>
    <p><a class="btn btn-success" href="/game/<%=game._id%>">Back to game Details</a></p>
    <p><a class="btn btn-success" href="/game">All Games</a></p>