<% layout('./layout/boilerplate') %>
    <h1 class="text-center"> Game Details</h1>
    <div class="col-8 offset-2">
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="" alt="">
                </div>
                <div class="col-mg-8">
                    <h2>Title: <%= game.title %>
                    </h2>
                    <h2>Owner: <%= game.owner %>
                    </h2>
                    <h2>game Year: <%= game.year %>
                    </h2>
                    <h2>Description: <%= game.description %>
                    </h2>
                    <h2>Country: <%= game.country %>
                    </h2>
                    <h2>Genre: <%= game.genre %>
                    </h2>
                    <h2>Release Date: <%= game.release_date %>
                    </h2>
                    <h2>game language: <%= game.language %>
                    </h2>
                    <p>
                    <form action="/game/<%=game._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    </p>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <p><a class="btn btn-success" href="/game">All games</a></p>
        <p><a class="btn btn-success" href="/game/<%=game._id%>/edit ">Edit game</a></p>
    </footer>