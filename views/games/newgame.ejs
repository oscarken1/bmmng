<% layout('./layout/boilerplate') %>
    <div class="row">
        <h1>Add new Game</h1>
        <div class="col-7 offset-3">
            <form action="/game" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="game[title]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="owner">Owner(s)</label>
                    <input class="form-control" type="text" id="owner" name="game[owner]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="year">game Year</label>
                    <input class="form-control" type="text" id="year" name="game[year]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">description</label>
                    <input class="form-control" type="text" id="description" name="game[description]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="country">game Country</label>
                    <input class="form-control" type="text" id="country" name="game[country]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="genre">Genre</label>
                    <input class="form-control" type="text" id="genre" name="game[genre]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="release_date">Release Date</label>
                    <input class="form-control" type="text" id="release_date" name="game[release_date]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="language">Language</label>
                    <input class="form-control" type="text" id="language" name="game[language]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="download_url">Download URL</label>
                    <input class="form-control" type="text" id="download_url" name="game[download_url]">
                </div>
                <button>Add Game</button>
            </form>
        </div>
    </div>
    <p><a class="btn btn-success" href="/game">Back to All games</a></p>