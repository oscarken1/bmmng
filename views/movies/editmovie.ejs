<% layout('./layout/boilerplate') %>
<h1 class="text-center">EDIT THIS MOVIE</h1>
<div class="col-7 offset-3"></div>
    <form action="/movie/<%= movie._id %>?_method=PUT" method="POST">
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="movie[title]" value="<%= movie.title %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="cast">Casts</label>
            <input class="form-control" type="text" id="cast" name="movie[cast]" value="<%= movie.cast %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="year">movie Year</label>
            <input class="form-control" type="text" id="year" name="movie[year]" value="<%= movie.year %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">description</label>
            <input class="form-control" type="text" id="description" name="movie[description]" value="<%= movie.description %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="country">Movie Country</label>
            <input class="form-control" type="text" id="country" name="movie[country]" value="<%= movie.country %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="genre">Genre</label>
            <input class="form-control" type="text" id="genre" name="movie[genre]" value="<%= movie.genre %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="release_date">Release Date</label>
            <input class="form-control" type="text" id="release_date" name="movie[release_date]" value="<%= movie.release_date %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="language">Language</label>
            <input class="form-control" type="text" id="language" name="movie[language]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="download_url">Download URL</label>
            <input class="form-control" type="text" id="download_url" name="movie[download_url]" value="<%= movie.download_url %> ">
        </div>
        <div class="mb-3"></div>
        <button class="btn btn-success" mb-3 >Update movie</button>
    </form>
</div>
    <p><a class="btn btn-success" href="/movie/<%=movie._id%>">Back to movie Details</a></p>
    <p><a class="btn btn-success" href="/movie">All Movies</a></p>
