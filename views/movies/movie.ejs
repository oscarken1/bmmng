<% layout('./layout/boilerplate') %>
<body>
    <h1>MOVIES</h1>
    
<div class="col-9 offset-1">
<% for (let movie of movies) { %>
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="" alt="">
            </div>
            <div class="col-mg-8">
                <h5 class="card-title">Title: <%= movie.title %></h5>
                <h5 class="card-title">Casts: <%= movie.cast %></h5>
                <h5 class="card-title">Genre: <%= movie.genre %></h5>
                <p><a class="btn btn-primary" href="/movie/<%= movie._id %>">View <%= movie.title %> </a></p>
            </div>
        </div>
    </div>
<% } %>
</div>
<div class="mb-3"></div>
    <div>
        <p><a class="btn btn-success" href="/movie/new">Add a new movie</a></p>
    </div>