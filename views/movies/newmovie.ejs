<% layout('./layout/boilerplate') %>
<div class="row">
    <h1>Add new Movie</h1>
    <div class="col-7 offset-3">
    <form action="/movie" method="POST">
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="movie[title]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="cast">Casts</label>
            <input class="form-control" type="text" id="cast" name="movie[cast]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="year">movie Year</label>
            <input class="form-control" type="text" id="year" name="movie[year]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">description</label>
            <input class="form-control" type="text" id="description" name="movie[description]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="country">movie Country</label>
            <input class="form-control" type="text" id="country" name="movie[country]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="genre">Genre</label>
            <input class="form-control" type="text" id="genre" name="movie[genre]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="release_date">Release Date</label>
            <input class="form-control" type="text" id="release_date" name="movie[release_date]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="language">Language</label>
            <input class="form-control" type="text" id="language" name="movie[language]">
        </div>
        <div class="mb-3">
            <label class="form-label" for="download_url">Download URL</label>
            <input class="form-control" type="text" id="download_url" name="movie[download_url]">
        </div>
        <button>Add movie</button>
    </form>
    </div>
</div>
    <p><a class="btn btn-success" href="/movie">Back to All movies</a></p>
