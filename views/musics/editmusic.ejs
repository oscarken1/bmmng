<% layout('./layout/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit Music</h1>
    <div class="col-7 offset-3">
    <form action="/music/<%= music._id %>?_method=PUT" method="POST">
        <div class="mb-3">
            <label class="form-label" for="artist">Artist</label>
            <input class="form-control" type="text" id="artist" name="music[artist]" value="<%= music.artist %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="music[title]" value="<%= music.title %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="features">features</label>
            <input class="form-control" type="text" id="features" name="music[features]" value="<%= music.features %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="year">Music Year</label>
            <input class="form-control" type="text" id="year" name="music[year]" value="<%= music.year %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="description">description</label>
            <input class="form-control" type="text" id="description" name="music[description]" value="<%= music.description %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="country">Music Country</label>
            <input class="form-control" type="text" id="country" name="music[country]" value="<%= music.country %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="genre">Genre</label>
            <input class="form-control" type="text" id="genre" name="music[genre]" value="<%= music.genre %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="release_date">Release Date</label>
            <input class="form-control" type="text" id="release_date" name="music[release_date]" value="<%= music.release_date %> ">
        </div>
        <div class="mb-3">
            <label class="form-label" for="download_url">Download URL</label>
            <input class="form-control" type="text" id="download_url" name="music[download_url]" value="<%= music.download_url %> ">
        </div>
        <button class="btn btn-success">Update Music</button>
    </form>
    </div>
    </div>
    <p><a class="btn btn-success" href="/music/<%=music._id%>">Back to music Details</a></p>
    <p><a class="btn btn-success" href="/music">All Musics</a></p>
